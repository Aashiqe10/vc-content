<div class="block block--info {{block.topPadding}} {{block.bottomPadding}}
    {% if block.topDivider == 'True' %} block--divider-top {% endif %}
    {% if block.bottomDivider == 'True' %} block--divider-bottom {% endif %}">
    <div class="block__inner container">
        <div class="row flex-column-reverse flex-lg-row">
            <div class="col-lg">
                <div class="block__descr">{{block.text}}</div>
            </div>
            <div class="col-lg">
                <div class="block__t">{{block.title}}</div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-lg">
                <div class="block__descr">{{block.subtitle}}</div>
            </div>
        </div>
    </div>
</div>