<div id="{{ block.__id }}" class="section {% if block.style == 'dark' %} section--gray {% endif %}
     {% if block.noTop == 'True' %} section--small-top {% endif %}
     {% if block.noBottom == 'True' %} section--small-bottom {% endif %}
     {% if block.noPad == 'True' %} section--no-padding {% endif %}">
    <div class="section__inner container">
        {% include 'blocks/block-title' block: block %}
        {% if block.intro != '' %}
        <div class="section__descr">
            {{ block.intro }}
        </div>
        {% endif %}
        <div class="list list--columns row">
            {% for item in block.items %}
            <div class="list__item {{ block.colStyle }}">
                {% if item.image != null and item.image.url != '' %}
                <img data-src="{{ item.image.url | image_url }}" alt="{{ item.image.altText }}" class="list__icon {{ item.iconStyle }} {{ item.iconAlign }} lazyload" />
                {% endif %}
                {% if item.title != '' %}
                <div class="list__t">{{ item.title }}</div>
                    {% endif %}
                    {% if item.text != '' %}
                    <div class="list__descr">
                    {{ item.text }}
                    {% if item.url != '' and item.url.urlText != '' %}
                    <a href="{{ item.url.url }}" class="{{ item.url.style }}">{{ item.url.urlText }}</a>
                    {% endif %}
                </div>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
</div>
