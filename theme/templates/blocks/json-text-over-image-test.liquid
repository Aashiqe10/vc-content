{% assign sectionStyle = 'section--cover' %}
{% if block.sectionStyle == 'container' %}
	{% assign sectionStyle = block.sectionStyle %}
{% endif %}
<div class="section {{sectionStyle}} {% if block.style == 'dark' %} section--gray {% endif %} {% if block.noTop == true %} section--small-top {% endif %} {% if block.noBottom == true %} section--small-bottom {% endif %} {% if block.noPad == true %} section--no-padding {% endif %}">
    <div {% if sectionStyle == 'container' %} class="section__bg" {% endif %} style="background-image: url('{{ block.image.url }}');">
        {% if block.subTitle != blank %}
        <div class="section__sub-t">{{ block.subTitle }}</div>
        {% endif %}
        {% include 'blocks/block-title', block %}
        {% if block.content != blank %}
        <div class="section__descr">
            {{ block.content }}
        </div>
        {% endif %}
        {% if block.url1 != blank and block.url1.urlText != blank %}
        <div class="section__actions">
            <a href="{{ block.url1.url }}" class="btn {{ block.url1.style }}">{{ block.url1.urlText }}</a>
            {% if block.url2 != blank and block.url2.urlText != blank %}
            <a href="{{ block.url2.url }}" class="btn {{ block.url2.style }}">{{ block.url2.urlText }}</a>
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>