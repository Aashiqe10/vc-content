<div id="{{ block.__id }}" class="section {% if block.size == 'page' %} section--cover {% endif %} {% if block.style == 'dark' %} section--gray {% endif %}
     {% if block.noTop == 'True' %} section--small-top {% endif %}
     {% if block.noBottom == 'True' %} section--small-bottom {% endif %}
     {% if block.noPad == 'True' %} section--no-padding {% endif %}">
    <div class="{% if block.size != 'page' %} section__inner container {% endif %}">
        <img data-src="{{ block.image.url }}" alt="{{ item.image.altText }}" class="{% if block.size == 'middle' %} section__pic {% endif %} {% if block.size != 'middle' and block.size != 'normal' %} section__pic--full {% endif %} lazyload" />
    </div>
</div>

