{% if block.backgroundOverlayColorHex != '' %}
    {% include 'overlay-color-hex-style-with-counter' %}
{% endif %}

<div class="block {% include 'cover-background-settings' %}>
    <div class="block__inner container">
        <div class="row align-items-center">
            {% if block.horizontalAlignment == 'left' %}
                <div class="col-lg mr-auto">
                    {% if block.note != '' %}
                        <div class="block__note">{{block.note}}</div>
                    {% endif %}
                    <div class="block__space"></div>
                    {% if block.titleStyle == 'h1' %}
                        <h1 class="block__t">{{block.title}}</h1>
                    {% elsif  block.titleStyle == 'h2' %}
                        <h2 class="block__t">{{block.title}}</h2>
                    {% elsif block.titleStyle == 'h3' %}
                        <h3 class="block__t">{{block.title}}</h3>
                    {% else %}
                        <div class="block__t">{{block.title}}</div>
                    {% endif %}
                    <div class="block__space"></div>
                    <h3 class="block__descr">{{block.subtitle}}</h3>
                    {% if block.firstButton != '' and block.firstButton.urlText != '' %}
                        <div class="block__space"></div>
                        <div class="block__actions">
                            <a href="{{block.firstButton.url}}" class="{{block.firstButton.style}}" {% if block.firstButton.openInNewTab == 'True' %} target="_blank" {% endif %}>{{block.firstButton.urlText}}</a>
                            {% if block.secondButton != '' and block.secondButton.urlText != '' %}
                                <a href="{{block.secondButton.url}}" class="{{block.secondButton.style}}" {% if block.secondButton.openInNewTab == 'True' %} target="_blank" {% endif %}>{{block.secondButton.urlText}}</a>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
                
            <div class="col-lg-auto">
                <div class="block__form">
                    <form {% if block.formId != '' %}id="{{block.formId}}"{% endif %} {% if block.formName != '' %}name="{{block.formName}}"{% endif %} class="form">
                        {% for item in block.formFields %}
                            {% if item.fieldType == 'text' %}
                                <div class="form-group">
                                    <label class="form-label" {% if item.fieldId != '' %} for="{{item.fieldId}}" {% endif %}>{{item.labelText}}</label>
                                    <input {% if item.fieldId != '' %} id="{{item.fieldId}}" {% endif %} name="{{item.fieldName}}" placeholder="{{item.placeholder}}" type="text" class="form-control" {% if item.required == 'True' %}required{% endif %} />
                                </div>
                            {% elsif item.fieldType == 'checkbox' %}
                                <div class="form-group">
                                    <input type="checkbox" class="form-checkbox__input" {% if item.fieldId != '' %} id="{{item.fieldId}}" {% endif %} {% if item.required == 'True' %}required{% endif %} />
                                    <label class="form-checkbox__label" {% if item.fieldId != '' %} for="{{item.fieldId}}" {% endif %}>{{item.labelText}}</label>
                                </div>
                            {% elsif item.fieldType == 'select' %}
                                <div class="form-group">
                                    <label class="form-label" {% if item.fieldId != '' %} for="{{item.fieldId}}" {% endif %}>{{item.labelText}}</label>
                                    <select class="form-control" {% if item.fieldId != '' %} id="{{item.fieldId}}" {% endif %} name="{{item.fieldName}}" {% if item.required == 'True' %}required{% endif %}>
                                        {% for option in item.selectOptions %}
                                            <option value="{{option.value}}" {% if forloop.index == 0 %} selected {% endif %}>{{option.label}}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            {% elsif item.fieldType == 'radio' %}
                                <div class="form-group">
                                    <div class="radio-list">
                                        {% for radio in item.radioListItems %}
                                            {% assign itemClass = 'item' %}
                                            {% if forloop.index == 1 %}
                                                {% assign itemClass = 'item item--selected' %}
                                            {% endif %}
                                            <div class="radio-list__item">
                                                <input class="radio-list__input" type="radio" {% if item.fieldId != '' %}id="{{item.fieldId}}"{% endif %} name="{{item.fieldName}}" value="{{radio.formValue}}">
                                                <label class="radio-list__label" {% if item.fieldId != '' %}for="{{item.fieldId}}"{% endif %}>
                                                    <span class="radio-list__t">{{radio.title}}</span>
                                                    <span class="radio-list__descr">{{radio.text}}</span>
                                                </label>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% elsif item.fieldType == 'button' %}
                                <input type="submit" class="{{block.containerFormButtonColour}}" value="{{item.labelText}}" />
                            {% elsif item.fieldType == 'textarea' %}
                                <div class="form-group">
                                    <label class="form-label" {% if item.fieldId != '' %} for="{{item.fieldId}}" {% endif %}>{{item.labelText}}</label>
                                    <textarea class="form-control" {% if item.fieldId != '' %} id="{{item.fieldId}}" {% endif %} name="{{item.fieldName}}" placeholder="{{item.placeholder}}" {% if item.required == 'True' %}required{% endif %}></textarea>
                                </div>
                            {% endif %}
                            {% if item.fieldType == 'checkbox' and item.required == 'True' %}
                                <span style="display:none;margin-top: 1rem" style="display:none" class="form-error--highlight field-validation-error" data-valmsg-for="agree" data-valmsg-replace="true"><span id="agree-error" class="">Please agree with our terms</span></span>
                            {% endif %}
                        {% endfor %}
                    </form>
                </div>
            </div>

            {% if block.horizontalAlignment == 'right' %}
                <div class="col-lg mr-auto">
                    {% if block.note != '' %}
                        <div class="block__note">{{block.note}}</div>
                    {% endif %}
                    <div class="block__space"></div>
                    {% if block.titleStyle == 'h1' %}
                        <h1 class="block__t">{{block.title}}</h1>
                    {% elsif  block.titleStyle == 'h2' %}
                        <h2 class="block__t">{{block.title}}</h2>
                    {% elsif block.titleStyle == 'h3' %}
                        <h3 class="block__t">{{block.title}}</h3>
                    {% else %}
                        <div class="block__t">{{block.title}}</div>
                    {% endif %}
                    <div class="block__space"></div>
                    <h3 class="block__descr">{{block.subtitle}}</h3>
                    {% if block.firstButton != '' and block.firstButton.urlText != '' %}
                        <div class="block__space"></div>
                        <div class="block__actions">
                            <a href="{{block.firstButton.url}}" class="{{block.firstButton.style}}" {% if block.firstButton.openInNewTab == 'True' %} target="_blank" {% endif %}>{{block.firstButton.urlText}}</a>
                            {% if block.secondButton != '' and block.secondButton.urlText != '' %}
                                <a href="{{block.secondButton.url}}" class="{{block.secondButton.style}}" {% if block.secondButton.openInNewTab == 'True' %} target="_blank" {% endif %}>{{block.secondButton.urlText}}</a>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>