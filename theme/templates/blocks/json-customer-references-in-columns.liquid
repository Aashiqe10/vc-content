{% include 'overlay-color-hex-style-with-counter' predefinedColor: block.backgroundOverlayColor, customColor: block.backgroundOverlayColorHex %}

<div class="block {{block.containerAlignment}} {{block.topPadding}} {{block.bottomPadding}}
    {% if block.topDivider == 'True' %} block--divider-top {% endif %}
    {% if block.bottomDivider == 'True' %} block--divider-bottom {% endif %} {% include 'cover-background-settings' %}>
    <div class="block__inner container">
        <div class="block__t {{block.textAreaWidth}}">
            {% if block.title != '' %}
                {% include 'seo-text' tag: block.titleSeoTag, text: block.title %}
            {% endif %}
        </div>

        {% if block.subtitle != '' %}
            <div class="block__space"></div>
            <div class="block__descr {{block.textAreaWidth}}">{{block.subtitle}}</div>
            <div class="block__space block__space--size-lg"></div>
        {% else %}
            <div class="block__space block__space--size-lg"></div>
        {% endif %}

        {% if block.items.size > 0 %}
            <div class="list list-items list-items--cols-{{block.columnsCount}} list-items--reviews">
            {% for item in block.items %}
                <div class="list__item">
                    {% if item.image != '' and item.image.url != '' %}
                        <div class="list__img">
                            <img src="{{item.image.url}}" title="{item.image.altText}}" class="list__pic" />
                        </div>
                    {% endif %}

                    {% if item.name != '' %}
                        <div class="list__t">{{item.name}}</div>
                    {% endif %}

                    {% if item.jobTitle != '' %}
                        <div class="list__pos">{{item.jobTitle}}</div>
                    {% endif %}

                    {% if item.review != '' %}
                        <div class="list__descr">{{item.review}}</div>
                    {% endif %}

                    {% if item.company != '' %}
                        <div class="list__company">{{item.company}}</div>
                    {% endif %}
                </div>
            {% endfor %}
            </div>
        {% endif %}
    </div>
</div>