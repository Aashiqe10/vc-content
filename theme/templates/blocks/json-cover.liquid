<div id="{{ block.__id }}" class="{% if block.style == 'dark' %} section--gray {% endif %}
     {% if block.noTop == 'True' %} section--small-top {% endif %}
     {% if block.noBottom == 'True' %} section--small-bottom {% endif %}
     {% if block.noPad == 'True' %} section--no-padding {% endif %}">
     {% assign alignment = 'block--align-center' %}
     {% if block.horizontalAlignment == 'left' %}
        {% assign alignment = 'block--align-left' %}
     {% endif %}
     {% if block.horizontalAlignment == 'right' %}
        {% assign alignment = 'block--align-right' %}
     {% endif %}

     {% if block.backgroundOverlayColorHex != '' %}
        {% assign counter = counter | plus: 1 %}
         <style>
            .has-hex-{{counter}}:after
            {
                background: {{block.backgroundOverlayColorHex}};
                opacity:.7;
            }
         </style>
     {% endif %}

     <div class="section block {{block.backgroundScrollEffect}} {{alignment}} 
     {% if block.backgroundColor == 'none' and block.backgroundColorHex == '' %} block--cover {% endif %}
     {% if block.backgroundColor != 'none' and block.backgroundColorHex == '' %} {{block.backgroundColor}} {% endif %}
     {% if block.backgroundOverlayColorHex != '' %} has-hex-{{counter}} {% endif %}"
     {% if block.backgroundColorHex != '' %} style="background-color:{{block.backgroundColorHex}}" {% endif %}
     {% if block.backgroundColor == 'none' and block.background.url != '' %} style="background-image: url('{{block.background.url}}') {% endif %}">
        <div class="block__inner container">
            <div class="block__text">
                {% if block.note != '' %}
                    <div class="block__note">{{block.note}}</div>
                {% endif %}
                <div class="block__space"></div>
                {% if block.titleStyle == 'h1' %}
                    <h1 class="block__t">{{block.title}}</h1>
                {% elsif  block.titleStyle == 'h2' %}
                    <h2 class="block__t">{{block.title}}</h2>
                {% elsif block.titleStyle == 'h3' %}
                    <h3 class="block__t">{{block.title}}</h3>
                {% else %}
                    <div class="block__t">{{block.title}}</div>
                {% endif %}
                <div class="block__space"></div>
                <h3 class="block__descr {{block.subtitleFontWeight}}
                    {% if block.subtitleIsItalic == 'True' %} block__descr--i {% endif %}
                    {% if block.subtitleIsStrikeThrough == 'True' %} block__descr--lt {% endif %}">
                    {% if block.subtitleIsLink == 'True' %}
                        <a href="{{block.subtitleUrl}}">
                            {% if block.subtitleIsUnderline == 'True' %}
                                <u>{{block.subtitle}}</u>
                            {% else %}
                                {{block.subtitle}}
                            {% endif %}
                        </a>
                    {% else %}
                        {% if block.subtitleIsUnderline == 'True' %}
                            <u>{{block.subtitle}}</u>
                        {% else %}
                            {{block.subtitle}}
                        {% endif %}
                    {% endif %}
                </h3>
                {% if block.firstLink != '' and block.firstLink.urlText != '' %}
                    <div class="block__space"></div>
                    <div class="block__actions">
                        <a href="{{block.firstLink.url}}" class="{{block.firstLink.style}}">{{block.firstLink.urlText}}</a>
                        {% if block.secondLink != '' and block.secondLink.urlText != '' %}
                            <a href="{{block.secondLink.url}}" class="{{block.secondLink.style}}">{{block.secondLink.urlText}}</a>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
