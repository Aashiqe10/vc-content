{% include 'overlay-color-hex-style-with-counter' predefinedColor: block.backgroundOverlayColor, customColor: block.backgroundOverlayColorHex %}

<div class="block {% include 'cover-background-settings' %}>
    <div class="block__inner container">
        <div class="row align-items-center w-100">
            {% if block.horizontalAlignment == 'left' %}
                <div class="col-lg-auto">
                    <div class="block__media">
                        <div class="block-video">
                            {% if block.video != '' %}
                                <a href="{{ block.video }}" class="section-video" data-fancybox="">
                                    {% if block.videoThumbnail != '' and block.videoThumbnail.url != '' %}
                                        <img src="{{block.videoThumbnail.url}}" title="{{block.videoThumbnail.altText}}" class="block__pic" />
                                        <div class="block-video__action"></div>
                                    {% endif %}
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}
                
            <div class="col-lg {{block.verticalAlignment}}">
                {% if block.note != '' %}
                    <div class="block__note">{{block.note}}</div>
                {% endif %}
                <div class="block__space"></div>

                {% include 'seo-text' tag: block.titleSeoTag, text: block.title %}

                <div class="block__space"></div>
                <div class="block__descr">{{block.subtitle}}</div>
                {% if block.firstButton != '' and block.firstButton.urlText != '' %}
                    <div class="block__space"></div>
                    <div class="block__actions">
                        <a href="{{block.firstButton.url}}" class="{{block.firstButton.style}}" {% if block.firstButton.openInNewTab == 'True' %} target="_blank" {% endif %}>{{block.firstButton.urlText}}</a>
                        {% if block.secondButton != '' and block.secondButton.urlText != '' %}
                            <a href="{{block.secondButton.url}}" class="{{block.secondButton.style}}" {% if block.secondButton.openInNewTab == 'True' %} target="_blank" {% endif %}>{{block.secondButton.urlText}}</a>
                        {% endif %}
                    </div>
                {% endif %}
            </div>

            {% if block.horizontalAlignment == 'right' %}
                <div class="col-lg-auto">
                    <div class="block__media">
                        <div class="block-video">
                            {% if block.video != '' %}
                                <a href="{{ block.video }}" class="section-video" data-fancybox="">
                                    {% if block.videoThumbnail != '' and block.videoThumbnail.url != '' %}
                                        <img src="{{block.videoThumbnail.url}}" title="{{block.videoThumbnail.altText}}" class="block__pic" />
                                        <div class="block-video__action"></div>
                                    {% endif %}
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>