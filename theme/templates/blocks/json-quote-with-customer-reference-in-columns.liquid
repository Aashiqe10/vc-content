<div id="{{ block.__id }}" class="block {{block.backgroundColor}} {{block.topPadding}} {{block.bottomPadding}}
    {% if block.topDivider == 'True' %} block--divider-top {% endif %}
    {% if block.bottomDivider == 'True' %} block--divider-bottom {% endif %}
    {% if block.backgroundColorHex == '' %}{{block.backgroundColor}}{% endif %}"
    {% if block.backgroundColorHex != '' %}style="background-color:{{block.backgroundColorHex}}"{% endif %}">
    <div class="block__inner container">
        <div class="row">
            <div class="block__text {{block.textAreaWidth}}">
                {% include 'seo-text' tag: block.titleSeoTag, text: block.title %}

                {% if block.subtitle != '' %}
                    <div class="block__space"></div>
                    <div class="block__descr">{{block.subtitle}}</div>
                    <div class="block__space block__space--size-lg"></div>
                {% else %}
                    <div class="block__space block__space--size-lg"></div>
                {% endif %}
            </div>
        </div>
        
        {% if block.items.size > 0 %}
            <div class="list list-items list-items--cols-2">
                {% for item in block.items %}
                    {% if item.type == 'company' %}
                        <div class="list__item">
                            <div class="list__descr">{{item.text}}</div>
                            <div class="list__country">
                                <div class="list__country-img">
                                    {% if item.image != '' %}
                                        <img src="{{item.image.url}}" title="{{item.image.altText}}" />
                                    {% endif %}
                                </div>
                                <div class="list__country-text">
                                    {{item.name}}
                                    {% if item.site.urlText != '' and item.site.url != '' %}
                                        <a href="{{item.site.url}}" {% if item.site.openInNewTab == 'True' %}target="_blank"{% endif %}>{{item.site.urlText}}</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="list__item list__item--flex">
                            <div>
                                <img src="{{item.image.url}}" title="{{item.image.altText}}" class="list__quote" />
                            </div>
                            <div class="list__reviewer">
                                <div class="list__descr">
                                    {{item.text}}
                                </div>
                                <div class="list__links">
                                    <div class="list__links-item">{{item.name}}</div>
                                    <div class="list__pos">{{item.jobTitle}}</div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
