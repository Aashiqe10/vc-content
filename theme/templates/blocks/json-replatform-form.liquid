<div class="section {% if block.style == 'dark' %} section--gray {% endif %} {% if block.noTop == true %} section--small-top {% endif %} {% if block.noBottom == true %} section--small-bottom {% endif %} {% if block.noPad == true %} section--no-padding {% endif %}">
    <div class="section__inner container">
        <div class="row align-items-lg-center flex-row-reverse">
            <div class="section__img col-lg" style="text-align: {{ block.align }};">
                <img src="{{ block.image.url }}"
                     {% if block.image.width != blank %} width="{{block.image.width}}" {% endif %}
                     {% if block.image.height != blank %} height="{{block.image.height}}" {% endif %}
                     style="max-width: 100%;"
                     alt="{{ item.image.altText }}" class="section__pic">
            </div>
            <div class="col-lg-auto section__info">
                {% include 'blocks/block-title', block %}
                <div class="row">
					<form id="replatform-form" class="form col-sm-6">
						<div class="section__descr section__descr--tiny">{{ block.content }}</div>
                        <div class="form-group">
						    <input id="email" type="text" name="email" class="form-control" placeholder="Whatâ€™s your business mail" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" />
                        </div>
                        <div class="form-group" id="username-wrapper" style="display: none;">
						    <input id="username" type="text" name="username" class="form-control" placeholder="Enter your preffered name" />
                        </div>
                        <input type="text" id="firstname" name="firstname" style="display:none" />
                        <input type="text" id="lastname" name="lastname" style="display:none" />
						<div class="form-helper-holder">
							<a data-target-show="username-wrapper" href="#">+ Add your name (optional)</a>
						</div>
						<button id="replatDownloadBtn" class="btn btn--orange btn--block">Download</button>
					</form>
				</div>
            </div>
        </div>
    </div>
</div>
