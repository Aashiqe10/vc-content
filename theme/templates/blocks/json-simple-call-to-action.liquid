<div class="block block--padding-half {% if block.backgroundColorHex == '' %} {{block.backgroundColor}}" {% else %}" style="background-color:{{block.backgroundColorHex}}" {% endif %}>
    <div class="block__inner container">
        <div class="block__learn {% if block.titleAlignment == 'center' %} block__learn--center {% endif %} {{block.titleColor}}">
            {% if block.titleStyle == 'h1' %}
                <h1 class="block__t">{{block.title}}</h1>
            {% elsif block.titleStyle == 'h2' %}
                <h2 class="block__t">{{block.title}}</h2>
            {% elsif block.titleStyle == 'h3' %}
                <h3 class="block__t">{{block.title}}</h3>
            {% else %}
                <div class="block__t">{{block.title}}</div>
            {% endif %}
            {% if block.button != '' and block.button.urlText != '' %}
                <a href="{{block.button.url}}" class="{{block.button.style}}" {% if block.button.openInNewTab == 'True' %} target="_blank" {% endif %}>{{block.button.urlText}}</a>
            {% endif %}
        </div>
    </div>
</div>