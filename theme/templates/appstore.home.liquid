<div class="apps">
    <div class="info-w">
        <div class="info __responsive">
            <div class="info-ico"></div>
            <div class="info-descr">{{ 'apps.category.contact_us_slogan' | t }}</div>
            <a class="btn __medium __round __red __ucase" ng-click="showBecomeADeveloperForm()">{{ 'apps.category.become_a_developer' | t }}</a>
        </div>
    </div>    
        <div class="items __responsive">
            <div class="title-w">
                <h2 class="t">{{ collections['featured'].title }}</h2>
                <ul class="menu __inline __right">
                    <li class="menu-item">
                        <a class="menu-link" href="{{ collections['featured'].url | absolute_url }}">View All</a>
                    </li>
                </ul>
            </div>
            <div class="list __items __inline">
                <ul class="main">
                  {% assign featured_products = collections['featured'].products | sort:"createddate:desc" %}
                   {% for product in featured_products limit: 5 %}
                        {% include 'grid-item' %}
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="items __responsive">
            <div class="title-w">
                <h2 class="t">{{ 'apps.category.new_extensions' | t }}</h2>
            </div>
            <div class="list __items __inline">
                <ul class="main">
                   {% assign new_extensions = collections['new-extensions'].products | sort:"createddate:desc" %}
                   {% for product in new_extensions limit: 5 %}
                        {% include 'grid-item' %}
                    {% endfor %}
                </ul>
            </div>
        </div>
   
</div>