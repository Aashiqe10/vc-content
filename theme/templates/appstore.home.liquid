<div class="apps">
    <div class="info-w">
        <div class="info __responsive">
            <div class="info-ico"></div>
            <div class="info-descr">{{ 'apps.category.contact_us_slogan' | t }}</div>
            <a class="btn __medium __round __red __ucase" ng-click="showBecomeADeveloperForm()">{{ 'apps.category.become_a_developer' | t }}</a>
        </div>
    </div>
        <div class="items __responsive">
            <div class="title-w">
                <h1 class="t">{{ collections['featured'].title }}</h1>
                <ul class="menu __inline __right">
                    <li class="menu-item">
                        <a class="menu-link" href="{{ collections['featured'].url | absolute_url }}">View All</a>
                    </li>
                </ul>
            </div>
            <div class="list __items __inline">
                {% assign featured_products = collections['featured'].products %}
                {{ paginator = featured_products | paginate 5 '{"SortBy": "createddate:desc", "ResponseGroup" : "Default, ItemProperties"}' }}
                <ul class="main">
                  {% for product in featured_products %}
                    {% include 'grid-item' %}
                  {% endfor %}
                </ul>
            </div>
        </div>
        <div class="items __responsive">
            <div class="title-w">
                <h2 class="t">{{ 'apps.category.new_extensions' | t }}</h2>
            </div>
            <div class="list __items __inline">
                <ul class="main">
                   {% assign new_extensions = collections['new-extensions'].products %}
                   {{ paginator = new_extensions | paginate 5 '{"SortBy": "createddate:desc", "ResponseGroup" : "Default, ItemProperties"}' }}
                   {% for product in new_extensions %}
                        {% include 'grid-item' %}
                    {% endfor %}
                </ul>
        </div>
</div>