<div class="apps">
    {% include 'apps-menu' %}
    {% if collection.handle != 'apps' %}
        {% include 'breadcrumb' %}
    {% endif %}
    {% paginate collection.products by 12 %}
    <div class="items __responsive">
            <div class="title-w">
                {% if collection.handle == 'apps' %}
                    <h2 class="t">{{ 'apps.category.new_extensions' | t }}</h2>
                {% else %}
                    <h2 class="t">{{ collection.title }}</h2>
                {% endif %}
            </div>
            <div class="list __items __inline">
                <ul class="main">
                    {% for product in collection.products %}
                        {% include 'grid-item' %}
                    {% endfor %}
                </ul>
            </div>
            {% if paginate.pages > 1 %}
                <div class="text-center">
                    {% include 'pagination-custom' %}
                </div>
            {% endif %}
        </div>
    {% endpaginate %}
    {% if collection.handle == 'apps' %}
        <div class="info-w">
            <div class="info __responsive">
                <div class="info-ico"></div>
                <div class="info-descr">{{ 'apps.category.contact_us_slogan' | t }}</div>
                <a class="btn __large __round __red __ucase" ng-click="showBecomeADeveloperForm()">{{ 'apps.category.become_a_developer' | t }}</a>
            </div>
        </div>
    {% endif %}
</div>