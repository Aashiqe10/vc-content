{% layout 'apps' %}

{% assign page_title = 'Virto Commerce Appstore - Vendor ' | append: vendor.name %}
<div class="apps">
    {% include 'breadcrumb' %}
    <div class="vendor container">
        <div class="col-w">
            <div class="col __col-70">
                <div class="title-w">
                    <h1 class="t">{{ vendor.name }}</h1>
                    <ul class="menu __inline __right">
                        <li class="menu-item">
                            <a class="menu-link" style="cursor:pointer;" ng-click="showContactVendorForm()">Contact</a>
                        </li>
                        <li class="menu-item">
                            <a class="menu-link" style="cursor:pointer;" ng-click="showSupportVendorForm()">Support</a>
                        </li>
                        <li class="menu-item">
                            <a class="menu-link" href="{{ vendor.site_url | absolute_url }}">Site</a>
                        </li>
                    </ul>
                </div>
                <div class="vendor-descr">
                    {{ vendor.description }}
                </div>
            </div>
            <div class="extension-links col __col-30">
                <div class="extension-canvas __right">
                    <img alt="" src="{{ vendor.logo_url | absolute_url }}" class="extension-img" />
                </div>
            </div>
        </div>
    </div>
</div>
