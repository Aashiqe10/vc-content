<div class="section{% if block.style == 'dark' %} section--gray{% endif %}{% if block.no_top == true %} section--small-top{% endif %}{% if block.no_bottom == true %} section--small-bottom{% endif %}{% if block.no_pad == true %} section--no-padding{% endif %}">
    <div class="section__inner container">
        <div class="section__info">
			<h2 class="section__t">{{ block.title }}</h2>
			<div class="form-horizontal">
				<input placeholder="Your email" type="text" class="form-control">
				<input placeholder="John Smith" type="text" class="form-control">
				<a href="#" class="btn btn--orange">{{ block.buttonText }}</a>
				<div class="form-descr">
					{{ block.description }}
				</div>
			</div>
		</div>
    </div>
</div>

{% comment %}

    {"id": "name","label": "Block name","type": "string"},
    {"id": "size","label": "Choose size","type": "select","default": "medium",
    "options": [{"label": "Small","value": "small"},{"label": "Medium","value": "medium"},
    {"label": "Large","value": "large"},{"label": "Extra Large","value": "xlarge"}]},
    {"id": "url","label": "Upload picture","type": "image","previewWidth": 120,"previewHeight": 80}

{% endcomment %}
