<div class="section {% if block.style == 'dark' %} section--gray {% endif %} {% if block.no_top == True %} section--small-top {% endif %} {% if block.no_bottom == True %} section--small-bottom {% endif %}">
    <div class="section__inner container">
        {% if block.title != blank %}
        <h2 class="section__t">{{ block.title }}</h2>
        {% endif %}
        {% if block.content != blank %}
        <div class="section__descr">
            {{ block.content }}
            {% if block.url != blank and block.url.urlText != blank %}
            <a href="{{ block.url.url }}" class="{{ block.url.style }}">{{ block.url.urlText }}</a>
            {% endif %}
        </div>
        {% elsif block.url != blank and block.url.urlText != blank %}
        <div class="section__descr">
            <a href="{{ block.url.url }}" class="{{ block.url.style }}">{{ block.url.urlText }}</a>
        </div>
        {% endif %}
    </div>
</div>

{% comment %}

{"id": "name","label": "Block name","type": "string","default": "Text"},
{"id": "content","label": "Content","type": "text","default": "Lorem ipsum dolor sit amet, consectetur ..." }

{% endcomment %}
