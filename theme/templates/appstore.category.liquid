{% layout 'apps' %}

<div class="apps">
    {% include 'breadcrumb' %}
    {% paginate collection.products by 30 %}
    <div class="items container">
            <div class="title-w">
                <h1 class="t">{{ collection.title }}</h1>
            </div>
            <div class="list __items __inline">
                <ul class="main">
                    {% assign products = collection.products | sort: 'title' %}

                    {% for product in products %}
                        {% include 'grid-item' %}
                    {% endfor %}
                </ul>
            </div>
            {% if paginate.pages > 1 %}
                <div class="text-center">
                    {% include 'pagination-custom' %}
                </div>
            {% endif %}
        </div>
    {% endpaginate %}
</div>
