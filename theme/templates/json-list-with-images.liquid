{% if block.style == 'dark' %}
    {% assign cssStyle = 'section--gray' %}
{% else %}
    {% assign cssStyle = '' %}
{% endif %}
<div class="section {{ cssStyle }} section--bg ">
    <div class="section__inner container">
        <h2 class="section__t">{{ block.title }}</h2>
        {% for item in block.items %}
        <div class="row justify-content-start">
            <div class="list-block__img col">
                <img src="{{ item.image.url }}" alt="" class="list-block__icon">
            </div>
            <div class="col-10" style="text-align: left">
                <div class="list-block__t">{{ item.title }}</div>
                <div class="list-block__descr">{{ item.text }}</div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% comment %}


{% endcomment %}
