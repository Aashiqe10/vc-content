{% if block.style == 'dark' %}
    {% assign cssStyle = 'section--gray' %}
{% else %}
    {% assign cssStyle = '' %}
{% endif %}
<section class="section {{ cssStyle }} {% if block.align == 'background' %} section--study {% endif %} section--bg"
         {% if block.align == 'background' %} style="background: url({{block.image.url}}) 50% 25% no-repeat fixed;" {% endif %}>
    <div class="section__inner container">
        <div class="row align-items-lg-center">
            {% if block.align == 'left' %}
            <div class="col-lg">
                <img src="{{ block.image.url }}"
                     {% if block.image.width != blank %} width="{{block.image.width}}" {% endif %}
                     {% if block.image.height != blank %} height="{{block.image.height}}" {% endif %}
                     alt="" class="section__pic">
            </div>
            {% endif %}
            {% if block.align != 'background' %}
            <div class="col-lg-auto section__info">
                {% if block.title != blank %}
                <h2 class="section__t">{{ block.title }}</h2>
                {% endif %}
                {{ block.content }}
                {% if block.url1 != blank and block.url1.url != blank %}
                <div class="section__descr">
                    <a href="{{ block.url1.url }}" class="{{ block.url1.style }}">{{ block.url1.urlText }}</a>
                    {% if block.url2 != blank and block.url2.url != blank %}
                    <a href="{{ block.url2.url }}" class="{{ block.url2.style }}">{{ block.url2.urlText }}</a>
                    {% endif %}
                </div>
                {% endif %}
            </div>
            {% else %}
            {% if block.title != blank %}
            <div class="section__t">{{ block.title }}</div>
            {% endif %}
            {% if block.content != blank %}
            <div class="section__descr">{{ block.content }}</div>
            {% endif %}
            {% if block.url1 != blank and block.url1.url != blank %}
            <div class="section__descr">
                <a href="{{ block.url1.url }}" class="{{ block.url1.style }}">{{ block.url1.urlText }}</a>
                {% if block.url2 != blank and block.url2.url != blank %}
                <a href="{{ block.url2.url }}" class="{{ block.url2.style }}">{{ block.url2.urlText }}</a>
                {% endif %}
            </div>
            {% endif %}
            {% endif %}
            {% if (block.align == 'right' or block.align == blank ) %}
            <div class="col-lg">
                <img src="{{ block.image.url }}"
                     {% if block.image.width != blank %} width="{{block.image.width}}" {% endif %}
                     {% if block.image.height != blank %} height="{{block.image.height}}" {% endif %}
                     alt="" class="section__pic">
            </div>
            {% endif %}
        </div>
    </div>
</section>

{% comment %}

{ "id": "name", "type": "string"},
{ "id": "title", "type": "string" },
{ "id": "style", "label": "Block style", "type": "select",
    "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
    ]
},
{ "id": "align", "label": "Image position", "type": "select",
    "options": [
        { "value": "right", "label": "Right" },
        { "value": "left", "label": "Left" }
    ]
},
{ "id": "url", "type": "image" },
{ "id": "content", "type": "text" }

{% endcomment %}
