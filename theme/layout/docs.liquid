    <script>
        $(function () {
            var items = $('.menu.__business-features li a');
            for (var i = 0; i < items.length; i++) {
                $(items[i]).parent().removeClass('__selected');
                if ($(items[i]).attr('href') === window.location.pathname.replace('/', '')) {
                    $(items[i]).parent().addClass('__selected');
                }
            }
        });
