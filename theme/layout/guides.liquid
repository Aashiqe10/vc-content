{%- include 'prepare_layout' -%}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="viewport" content="width=device-width" />
    <meta name="apple-touch-fullscreen" content="yes" />

    <!-- Facebook  Open Graph Meta Tags BEGIN -->
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="{% if article %}article{% else %}website{% endif %}" />
    <base href="{{ '/' | absolute_url }}" />
    {% assign full_base_url = '/' | full_url %}

    <!-- Facebook Open Graph Meta Tags END: -->
    {{ 'themes/assets/guides/css/prism.css' | stylesheet_tag }}
    {{ 'themes/assets/guides/css/base-modules.css' | stylesheet_tag }}
    {{ 'themes/assets/guides/css/project-modules.css' | stylesheet_tag }}
    {{ 'themes/assets/guides/css/cosmetic.css' | stylesheet_tag }}
    {{ 'themes/assets/guides/css/angular-gridster.css' | stylesheet_tag }}
    {{ 'themes/assets/guides/css/main.css' | stylesheet_tag }}
    {{ 'themes/assets/guides/css/responsive.css' | stylesheet_tag }}
    {{ '//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css' | stylesheet_tag }}
    <!-- Google fonts -->
    {{ '//fonts.googleapis.com/css?family=Exo+2:400,300,500,600,400italic&amp;subset=latin,cyrillic' | stylesheet_tag }}
    {{ '//fonts.googleapis.com/css?family=Open+Sans:400,600,700' | stylesheet_tag }}
    {{ 'jquery-3.5.0.min.js' | asset_url | script_tag }}

    {{ "///code.angularjs.org/1.5.5/angular.js"| script_tag  }}
    {{ "themes/assets/guides/js/angular-gridster.js"| script_tag }}
    {{ "themes/assets/guides/js/angular-ui/ui-bootstrap.js"| script_tag }}
    {{ "themes/assets/guides/js/angular-ui/ui-bootstrap-tpls.js"| script_tag }}

    {{ "themes/assets/guides/js/guides.js"| script_tag }}
    {{ "themes/assets/guides/js/prism.js"| script_tag }}
    {{ "themes/assets/guides/js/main.js"| script_tag }}
    {{ "themes/assets/guides/js/bladeConstructor.js"| script_tag }}

    {% include 'google-tag-manager-head' %}
    {{ content_for_header }}

    <base href="{{ '/' | absolute_url }}" />

    <!-- html5.js for IE less than 9 -->
    <!--[if lt IE 9]>
        <script src="/js/ie.js"></script>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- css3-mediaqueries.js for IE less than 9 -->
    <!--[if lt IE 9]>
        <script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
    <![endif]-->
    <script>
        var BASE_URL = '{{ "/" | full_url }}';
    </script>
</head>
<body ng-app="storefrontApp">
    <div id="layout">
        <div>
             {{ content_for_layout }}
        </div>
    </div>
</body>
</html>
