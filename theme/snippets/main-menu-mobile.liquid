<ul class="menu">
    {% for link in linklists.main-menu.links %}
        {% assign child_list_handle = link.title | handleize %}
        <li class="menu-item" data-id="swipeli">
            <a href="{{ link.url | absolute_url }}" data-swipe="opened">{{ link.title | escape }}</a>
            {% if linklists[child_list_handle].links.size > 0 %}
                <ul class="menu sub-menu">
                    {% for child_link in linklists[child_list_handle].links %}
                        <li class="menu-item">
                            <a href="{{ child_link.url }}">{{ child_link.title | escape }}</a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
    {% for col in collections %}
        {% if col.handle != collection.handle %}
            {% assign col_url = col.url | absolute_url %}
            <li class="menu-item">
                <a class="menu-link" href="{{ col_url }}">{{ col.title }}</a>
            </li>
        {% endif %}
    {% endfor %}
</ul>