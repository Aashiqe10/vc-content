<header class="header">
    <div class="header-inner container">
        <div class="row align-items-center justify-content-lg-between">
            <div class="col-auto">
                <a href="{{ '/apps' | absolute_url }}">
                    <div class="header-logo header-logo--apps">
                        Virtocommerce Appstore
                    </div>
                </a>
            </div>
            <div class="header-nav col-auto d-none d-lg-block">
                <ul class="nav">
                    {% for link in menu.links %}
                    {% assign child_list_handle = link.title | handleize %}
                    <li class="nav__item">
                        <a class="nav__link{% if linklists[child_list_handle].links.size > 0 %} nav__link--dropdown{% endif %}" href="{{ link.url }}">{{ link.title | escape }}</a>
                        {% if linklists[child_list_handle].links.size > 0 %}
                        <div class="dropdown-menu">
                            <div class="container">
                                <div class="row">
                                    {% for child_link in linklists[child_list_handle].links %}
                                        {% if child_link.url contains 'http://' %}
                                        <a class="dropdown-menu__item" href="{{ child_link.url }}" target="_blank">{{ child_link.title | escape }}</a>
                                        {% else %}
                                        <a class="dropdown-menu__item" href="{{ child_link.url }}">{{ child_link.title | escape }}</a>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        {% endif %}
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col col-md-auto">
                {% include 'search-bar' %}
            </div>
            <a class="header-toggle"></a>
        </div>
    </div>
</header>
