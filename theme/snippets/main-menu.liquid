<nav class="head-menu">
    <ul class="menu __inline">
        {% for link in linklists.main-menu.links %}
            {% assign child_list_handle = link.title | handleize %}
            <li class="menu-item{% if linklists[child_list_handle].links.size > 0 %} dropdown{% endif %}">
                <a href="{{ link.url | absolute_url }}">{{ link.title | escape }}</a>
                {% if linklists[child_list_handle].links.size > 0 %}
                    <ul class="menu __sub">
                        {% for child_link in linklists[child_list_handle].links %}
                            <li class="menu-item">
                                <a href="{{ child_link.url | absolute_url }}">{{ child_link.title | escape }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </li>
        {% endfor %}
        <li class="menu-item try">
            <a class="button try" href="{{ '/contact-us' | absolute_url }}">{{ 'general.contact_us' | t }}</a>
        </li>
    </ul>
</nav>