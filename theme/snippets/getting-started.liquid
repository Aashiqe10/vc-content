<header class="header">
    <div class="header-inner container">
        <div class="row align-items-center">
            <div class="col-auto">
                <a href="/">
                    <div class="header-logo">
                        Virtocommerce
                    </div>
                </a>
            </div>
            <div class="header-nav col-auto d-none d-lg-block">
                <ul class="nav">
                    <!--tabs-->
                    {%- assign menu_tabs = linklists['main-menu'] -%}
                    {%- for tab in menu_tabs.links -%}
                    <li class="nav__item">
                        <a class="nav__link nav__link--dropdown">{{ tab.title }}</a>
                        <div class="dropdown-menu">
                            <div class="container">
                                <div class="row">
                                    <!--blocks-->
                                    {%- assign tab_blocks = linklists[tab.url].links -%}
                                    {%- for current_block in tab_blocks -%}
                                    {%- if tab_blocks.size > 3 -%}
                                    <div class="col">
                                    {%- else -%}
                                    <div class="col-4">
                                    {%- endif -%}
                                        {%- assign current_links = linklists[current_block.url] -%}
                                        <div class="dropdown-menu__t">{{ current_block.title }}</div>
                                        <!--links-->
                                        {%- for link in current_links.links -%}
                                        <a class="dropdown-menu__item" href="{{ link.url }}">{{ link.title }}</a>
                                        {%- endfor -%}
                                    </div>
                                    {%- endfor -%}
                                </div>
                            </div>
                        </div>
                    </li>
                    {%- endfor -%}
                </ul>
            </div>
            <div class="header-phone ml-auto col-auto d-none d-lg-block">
              <a href="tel: +1 800 980-5288">+1 800 980-5288</a>
            </div>
            <div class="col-auto">
              <a class="btn btn--orange" href="/contact-us">Request a Demo</a>
            </div>
            <div class="header-phone col-auto d-block d-lg-none">
              <a href="tel: +1 800 980-5288">+1 800 980-5288</a>
            </div>
            <a class="header-toggle"></a>
        </div>
    </div>
</header>
