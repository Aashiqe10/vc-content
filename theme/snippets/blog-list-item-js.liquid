<div class="list__item" ng-repeat="article in articles">
    <a class="list__bg" href="{% raw %}{{ article.url }}{% endraw %}" ng-style="{ 'background-image': 'url(' + article.imageUrl + ')' }"></a>
    <div class="list__category" ng-if="article.category" ng-bind="'blogs.categories.' + article.category | translate"></div>
    <div class="list__info">
        <div class="list__t" ng-bind="article.title"></div>
        <div class="list__descr">
            {% raw %}{{ article.excerpt }}{% endraw %}
        </div>
        <div class="list list--tags" ng-if="article.tags.length > 0">
            <a class="list__item" ng-repeat="tag in article.tags | limitTo: 3" ng-href="/blog/tag/{% raw %}{{ tag }}{% endraw %}" ng-bind="'blogs.tags.' + tag | translate"></a>
        </div>
        <div class="list__author">
            <div class="list__author-logo"></div>
            <div class="list__author-text">
                <div class="list__author-name" ng-bind="article.author"></div>
                <div class="list__author-date" ng-bind="article.createdDate | date: format: 'MMMM d, y'"></div>
            </div>
        </div>
    </div>
</div>
