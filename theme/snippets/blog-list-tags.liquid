{% if tags.size > 0 %}
    {% if position == "top" %}
        <div class="post-tags">
    {% endif %}
    <ul class="tags list">
        {% for tag in tags %}
            <li class="list-item">
                {% assign tag_handle = tag | handleize %}
                {% assign blog_url = '/blogs/' | append: blog.handle %}
                {% assign tag_url = blog_url | append: '/tag/' | append: tag_handle  %}
                <a class="list-link" href="{{ tag_url | absolute_url }}">{{ tag }}</a>
            </li>
        {% endfor %}
    </ul>
    {% if position == "top" %}
        </div>
    {% endif %}
{% endif %}